/control/verbose 2
/run/verbose 2
/event/verbose 0
/tracking/verbose 0
#
# initialize
/run/initialize

# set output file name
/ftsg4/output/setFilename output.root

# particle 1 == e-, 2 == gamma
/ftsg4/gun/particle 1

# particle energy with unit
/ftsg4/gun/energy 200 keV

# 1 == pos1 (2pi), 2 == pos2 (4pi), 3 == pos3 (Ge)
/ftsg4/gun/position 2

/run/beamOn 10000
